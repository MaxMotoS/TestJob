<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

    <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical" >

        <TextView
                android:id="@+id/resume_message"
                android:text="@string/resume_message"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="visible"/>

        <TextView
                android:text="@string/name_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        <EditText
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="@string/name_hint"
                android:inputType="textCapWords" />

        <TextView
                android:text="@string/birthday_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        <EditText
                android:id="@+id/birthday"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="@string/birthday_hint"
                android:focusable="false"
                android:onClick="selectedDate" />

        <TextView
                android:text="@string/sex_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        <Spinner
                android:id="@+id/sex"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        <TextView
                android:text="@string/position_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        <EditText
                android:id="@+id/position"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:hint="@string/position_hint"
                android:inputType="textAutoCorrect|textCapSentences" />

        <TextView
                android:text="@string/salary_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        <EditText
                android:id="@+id/salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/salary_hint"
                android:inputType="numberDecimal" />

        <TextView
                android:text="@string/phone_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        <EditText
                android:id="@+id/phone"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="@string/phone_hint"
                android:digit="+0123456789"
                android:inputType="phone" />

        <TextView
                android:text="@string/email_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        <EditText
                android:id="@+id/email"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress" />

        <Button
                android:id="@+id/send_resume"
                android:text="@string/send_resume"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:onClick="sendResume" />

        <TextView
                android:id="@+id/response_label"
                android:text="@string/response_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="invisible" />

        <TextView
                android:id="@+id/response_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="@dimen/response_text_padding"
                android:visibility="invisible"
                />


    </LinearLayout>

</ScrollView>